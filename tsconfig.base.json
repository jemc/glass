{
  "compilerOptions": {
    // Be strict!
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // Avoid Node.js style of module resolution.
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",

    // Resolve peer glass modules as TypeScript source code,
    // rather than using the compiled JavaScript from their dist packages.
    "composite": true,
    "paths": {
      "@glass/*": [
        "./modules/*/src"
      ]
    }
  },
}

{
  "name": "@glass/core",
  "version": "1.0.0",
  "description": "A framework for making ECS-based WebGL games in TypeScript",
  "repository": "github:jemc/glass",
  "license": "MIT",
  "main": "dist/src/index.js",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "prettier": "^3.2.4",
    "semantic-release": "^23.0.0",
    "semantic-release-monorepo": "^8.0.1",
    "type-fest": "^4.10.2",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  },
  "scripts": {
    "sync-base-files": "sh ../../base-files/sync.sh",
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "format:check": "prettier --check '{src,tests}/**/*.ts'",
    "test": "vitest --run",
    "prepare": "tsc && sh -c 'cp src/*.glsl dist/src/ 2>/dev/null || true'",
    "release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "semantic-release-monorepo"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  }
}

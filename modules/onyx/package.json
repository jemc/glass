{
  "name": "@glass/onyx",
  "version": "1.0.0",
  "description": "General-purpose audio & chiptune framework for Glass Engine",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "format:check": "prettier --check '{src,tests}/**/*.ts'",
    "test": "jest",
    "prepare": "tsc"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "ignoreCodes": [
              151001
            ]
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/.*\\.js"
    ]
  },
  "dependencies": {
    "@glass/core": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}

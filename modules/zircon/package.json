{
  "name": "@glass/zircon",
  "version": "0.0.1",
  "description": "Menu/selection/icon interaction modes for Glass Engine",
  "repository": "github:jemc/glass",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "dependencies": {
    "@glass/core": "workspace:*",
    "@glass/opal": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "prettier": "^3.2.4",
    "semantic-release": "^23.0.0",
    "semantic-release-monorepo": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.4.0"
  },
  "scripts": {
    "sync-base-files": "sh ../../base-files/sync.sh",
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "format:check": "prettier --check '{src,tests}/**/*.ts'",
    "test": "vitest --run",
    "prepare": "vite build",
    "release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "semantic-release-monorepo"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  }
}

{
  "name": "@glass/pyrope",
  "version": "0.0.1",
  "description": "Tile-based side-scroller interaction modes for Glass Engine",
  "repository": "https://www.github.com/jemc/glass.git",
  "license": "MIT",
  "main": "dist/src/index.js",
  "dependencies": {
    "@glass/core": "workspace:*",
    "@glass/opal": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "semantic-release": "^23.0.0",
    "semantic-release-monorepo": "^8.0.1",
    "ts-jest": "^29.1.2",
    "type-fest": "^4.10.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "sync-base-files": "sh ../../base-files/sync.sh",
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "format:check": "prettier --check '{src,tests}/**/*.ts'",
    "test": "jest",
    "prepare": "tsc",
    "release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "semantic-release-monorepo"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "ignoreCodes": [
              151001
            ]
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/.*\\.js"
    ]
  }
}

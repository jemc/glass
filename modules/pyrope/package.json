{
  "name": "@glass/pyrope",
  "version": "0.0.1",
  "description": "Tile-based side-scroller interaction modes for Glass Engine",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "format:check": "prettier --check '{src,tests}/**/*.ts'",
    "test": "jest",
    "prepare": "tsc"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "ignoreCodes": [
              151001
            ]
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/.*\\.js"
    ]
  },
  "dependencies": {
    "@glass/core": "workspace:*",
    "@glass/opal": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "type-fest": "^4.10.2",
    "typescript": "^5.3.3"
  }
}

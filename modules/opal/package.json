{
  "name": "@glass/opal",
  "version": "0.0.1",
  "description": "General-purpose 2D graphical framework for Glass Engine",
  "repository": "github:jemc/glass",
  "license": "MIT",
  "main": "dist/src/index.js",
  "dependencies": {
    "@glass/core": "workspace:*",
    "ase-parser": "git+https://github.com/jemc/ase-parser.git#294a69e66d6ea6fc6a6622a60ae40f7ee27166a4",
    "assert-browserify": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.42.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "raw-loader": "^4.0.2",
    "semantic-release": "^23.0.0",
    "semantic-release-monorepo": "^8.0.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "scripts": {
    "sync-base-files": "sh ../../base-files/sync.sh",
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "format:check": "prettier --check '{src,tests}/**/*.ts'",
    "test": "jest",
    "test:playwright": "playwright test -c examples",
    "test:playwright:install": "playwright install --with-deps chromium",
    "start:examples": "webpack serve --config examples/webpack.config.js",
    "prepare": "tsc && sh -c 'cp src/*.glsl dist/src/ 2>/dev/null || true'",
    "release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "semantic-release-monorepo"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "ignoreCodes": [
              151001
            ]
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/.*\\.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
